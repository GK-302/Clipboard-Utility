<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryColor">#FF4CAF50</Color>
    <Color x:Key="SecondaryColor">#FFD6D6D6</Color>
    <Color x:Key="AccentColor">#FF8BC34A</Color>
    <Color x:Key="BackGroundColor">#888BC34A</Color>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="BackGroundBrush" Color="{StaticResource BackGroundColor}" />

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="Black" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#FF5A5A5A" />

    <Color x:Key="CardBackgroundColorNormal">#FFFFFFFF</Color>
    <Color x:Key="CardBackgroundColorHover">#FFE8F5E9</Color>
    <Color x:Key="CardBackgroundColorSelected">#FFC8E6C9</Color>
    <SolidColorBrush x:Key="CardBackgroundBrushNormal" Color="{StaticResource CardBackgroundColorNormal}"/>

    <SolidColorBrush x:Key="PresetBorderBrush" Color="{StaticResource SecondaryColor}"/>

    <SolidColorBrush x:Key="PresetHoverBorderBrush" Color="{StaticResource AccentColor}"/>

    <SolidColorBrush x:Key="PresetSelectedBorderBrush" Color="{StaticResource PrimaryColor}"/>

    <SolidColorBrush x:Key="Preset1HeaderBrush" Color="{StaticResource PrimaryColor}"/>

    <SolidColorBrush x:Key="Preset2HeaderBrush" Color="{StaticResource AccentColor}"/>

</ResourceDictionary>