<Window x:Class="ClipboardUtility.src.Views.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardUtility.src.Views"
        xmlns:loc="clr-namespace:ClipboardUtility.src.Helpers"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="WelcomeWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=AppTitle}" FontSize="20" Margin="10" FontWeight="Bold"/>
            <TextBlock Text="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=AppDescription}" FontSize="14" Margin="10"/>
            <TextBlock Text="{Binding AppVersion, StringFormat='Version: {0}'}" FontSize="14" Margin="10"/>
            <TextBlock Text="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=OperationGuidanceText}" FontSize="14" Margin="10"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="272"/>
                <ColumnDefinition Width="108"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="2">
                <TextBlock Width="180" VerticalAlignment="Center" Text="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=LanugageSettingTitle}"/>
                <ComboBox Width="200"
                  ItemsSource="{Binding AvailableCultures}"
                  SelectedItem="{Binding SelectedCulture, Mode=TwoWay}"
                  DisplayMemberPath="NativeName" />
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="215,0,0,0">
                <TextBlock Text="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=NeverShowAgainText}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0"
                   Foreground="Gray"/>
                <CheckBox Name="IsShowAgain" Margin="10,0,10,0" VerticalAlignment="Center"/>


                <Button Content="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=WelcomeNotificationCloseText}"
                HorizontalAlignment="Center"
                Click="Button_Click"
                Padding="10,5"/>
            </StackPanel>


        </Grid>
    </Grid>
</Window>