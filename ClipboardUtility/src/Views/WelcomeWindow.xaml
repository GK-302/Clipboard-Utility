<Window x:Class="ClipboardUtility.src.Views.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardUtility.src.Views"
        xmlns:loc="clr-namespace:ClipboardUtility.src.Helpers"
        mc:Ignorable="d"
        Title="WelcomeWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=AppTitle}" FontSize="20" Margin="10" FontWeight="Bold"/>
            <TextBlock Text="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=AppDescription}" FontSize="14" Margin="10"/>
            <TextBlock Text="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=AppVersion}" FontSize="14" Margin="10"/>
            <TextBlock Text="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=OperationGuidanceText}" FontSize="14" Margin="10"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="10">

            <TextBlock Text="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=NeverShowAgainText}" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0" 
                       Foreground="Gray"/>
            <CheckBox Name="IsShowAgain" Margin="10,0,10,0" VerticalAlignment="Center"/>
            <Button Content="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=WelcomeNotificationCloseText}" 
                    HorizontalAlignment="Center" 
                    Click="Button_Click"
                    Padding="10,5"/>

        </StackPanel>
    </Grid>
</Window>