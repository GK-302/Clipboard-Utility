<Window x:Class="ClipboardUtility.src.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings" Height="400" Width="480">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock FontWeight="Bold" Text="Notification Settings" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" >
                <TextBlock Width="180" VerticalAlignment="Center">Processing Mode:</TextBlock>
                <!--
                <ComboBox Width="200" ItemsSource="{Binding ProcessingModes}" SelectedItem="{Binding SelectedProcessingMode}" />
                -->
                <ItemsControl ItemsSource="{Binding ProcessingModes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Margin="4"
                                    Content="{Binding}" 
                                    Command="{Binding DataContext.SelectModeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <StackPanel Orientation="Horizontal" >
                <TextBlock Width="180" VerticalAlignment="Center">Notification Offset X:</TextBlock>
                <TextBox Width="80" Text="{Binding NotificationOffsetX, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Width="40" VerticalAlignment="Center">px</TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" >
                <TextBlock Width="180" VerticalAlignment="Center">Notification Offset Y:</TextBlock>
                <TextBox Width="80" Text="{Binding NotificationOffsetY, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Width="40" VerticalAlignment="Center">px</TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" >
                <TextBlock Width="180" VerticalAlignment="Center">Notification Margin:</TextBlock>
                <TextBox Width="80" Text="{Binding NotificationMargin, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Width="40" VerticalAlignment="Center">px</TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" >
                <TextBlock Width="180" VerticalAlignment="Center">Min Width:</TextBlock>
                <TextBox Width="80" Text="{Binding NotificationMinWidth, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Width="40" VerticalAlignment="Center">dp</TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" >
                <TextBlock Width="180" VerticalAlignment="Center">Max Width:</TextBlock>
                <TextBox Width="80" Text="{Binding NotificationMaxWidth, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Width="40" VerticalAlignment="Center">dp</TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" >
                <TextBlock Width="180" VerticalAlignment="Center">Min Height:</TextBlock>
                <TextBox Width="80" Text="{Binding NotificationMinHeight, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Width="40" VerticalAlignment="Center">dp</TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" >
                <TextBlock Width="180" VerticalAlignment="Center">Max Height:</TextBlock>
                <TextBox Width="80" Text="{Binding NotificationMaxHeight, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Width="40" VerticalAlignment="Center">dp</TextBlock>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnSave" Width="84" Margin="6" Click="BtnSave_Click">Save</Button>
            <Button x:Name="BtnCancel" Width="84" Margin="6" Click="BtnCancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>