<Window x:Class="ClipboardUtility.src.Views.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        Topmost="True"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Background="Transparent"
        Title="NotificationWindow"
        SizeToContent="WidthAndHeight"
        MinWidth="160"
        MaxWidth="420"
        MinHeight="48"
        MaxHeight="400">
    <Border CornerRadius="5" Padding="10,6">
        <StackPanel>
            <TextBlock
                Foreground="White"
                Text="{Binding NotificationMessage}"
                TextWrapping="Wrap"
                TextTrimming="CharacterEllipsis"
                MaxWidth="400" />
            <TextBlock
                Foreground="Red"
                Text="{Binding NotificationsimultaneousMessage}"
                TextWrapping="Wrap"
                TextTrimming="CharacterEllipsis"
                MaxWidth="400"
                Margin="0,4,0,0" />
        </StackPanel>
    </Border>
</Window>
