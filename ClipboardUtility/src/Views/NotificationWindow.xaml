<Window x:Class="ClipboardUtility.src.Views.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardUtility.src.Views"
        mc:Ignorable="d"
        WindowStyle="None"
        Topmost="True"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Background="Transparent"
        Title="NotificationWindow" Height="450" Width="800">
    <Border CornerRadius="5" Padding="10,5">
        <StackPanel>
            <Label 
                Foreground="White" 
                Content="{Binding NotificationMessage}"/>
            <Label
                Foreground="Red"
                Content="{Binding NotificationsimultaneousMessage}"/>
        </StackPanel>
    </Border>
</Window>
