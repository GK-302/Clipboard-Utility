<Window x:Class="ClipboardUtility.src.Views.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:ClipboardUtility.src.Converters"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        WindowStyle="None"
        Topmost="True"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Background="Transparent"
        Title="NotificationWindow"
        SizeToContent="WidthAndHeight">
    <Window.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    </Window.Resources>
    <!-- 透明なウィンドウでテキストのみ表示 -->
    <Grid>
        <StackPanel Margin="12,8">
            <!-- メインのテキスト（縁取り効果付き） -->
            <TextBlock
                Text="{Binding NotificationMessage}"
                Foreground="{Binding TextBrush}"
                TextWrapping="Wrap"
                TextTrimming="CharacterEllipsis"
                MaxWidth="400"
                FontSize="12"
                FontWeight="Medium"
                HorizontalAlignment="Center">
                <TextBlock.Effect>
                    <!-- テキストに縁取り効果を追加して、どんな背景でも読みやすくする -->
                    <DropShadowEffect 
                        Color="{Binding OutlineColor}"
                        BlurRadius="3" 
                        ShadowDepth="0" 
                        Opacity="0.8" />
                </TextBlock.Effect>
            </TextBlock>
            <!-- 同時表示メッセージ -->
            <TextBlock
                Text="{Binding NotificationsimultaneousMessage}"
                Foreground="{Binding TextBrush}"
                TextWrapping="Wrap"
                TextTrimming="CharacterEllipsis"
                MaxWidth="400"
                Margin="0,4,0,0"
                FontSize="11"
                Opacity="0.9"
                HorizontalAlignment="Center"
                Visibility="{Binding NotificationsimultaneousMessage, Converter={StaticResource StringToVisibilityConverter}}">
                <TextBlock.Effect>
                    <DropShadowEffect 
                        Color="{Binding OutlineColor}"
                        BlurRadius="3" 
                        ShadowDepth="0" 
                        Opacity="0.8" />
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
