<UserControl x:Class="ClipboardUtility.src.Views.WelcomeSlides.PresetSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:loc="clr-namespace:ClipboardUtility.src.Helpers"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="700"
             HorizontalAlignment="Center">

    <UserControl.Resources>
        <sys:Double x:Key="ContainerWidth">600</sys:Double>
        <sys:Double x:Key="CardHeaderHeight">200</sys:Double>
        <sys:Double x:Key="CardContentHeight">30</sys:Double>
        <GridLength x:Key="CardSpacerWidth">20</GridLength>

        <Thickness x:Key="CardContentPadding">20 5 0 0</Thickness>
        <CornerRadius x:Key="CardCornerRadius">20</CornerRadius>
        <CornerRadius x:Key="CardHeaderCornerRadius">20 20 0 0</CornerRadius>
        <Thickness x:Key="CardBorderThickness">1</Thickness>
        <Thickness x:Key="CardSelectedBorderThickness">2</Thickness>
        <Color x:Key="CardBackgroundColorNormal">#FFFFFFFF</Color>
        <Color x:Key="CardBackgroundColorHover">#FFF0F8FF</Color>
        <Color x:Key="CardBackgroundColorSelected">#FFE6F2FF</Color>
        <SolidColorBrush x:Key="CardBackgroundBrushNormal" Color="{StaticResource CardBackgroundColorNormal}"/>

        <SolidColorBrush x:Key="PresetBorderBrush" Color="Orange"/>
        <SolidColorBrush x:Key="PresetHoverBorderBrush" Color="DarkOrange"/>
        <SolidColorBrush x:Key="PresetSelectedBorderBrush" Color="DodgerBlue"/>

        <SolidColorBrush x:Key="Preset1HeaderBrush" Color="AliceBlue"/>
        <SolidColorBrush x:Key="Preset2HeaderBrush" Color="AntiqueWhite"/>

        <Style x:Key="PresetCardStyle" TargetType="ToggleButton">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="CardBorder"
                                CornerRadius="{StaticResource CardCornerRadius}"
                                BorderBrush="{StaticResource PresetBorderBrush}"
                                BorderThickness="{StaticResource CardBorderThickness}">

                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource CardBackgroundColorNormal}"/>
                            </Border.Background>

                            <StackPanel>
                                <Border Background="{TemplateBinding Tag}" 
                                        Height="{StaticResource CardHeaderHeight}" 
                                        CornerRadius="{StaticResource CardHeaderCornerRadius}"/>
                                <TextBlock Padding="{StaticResource CardContentPadding}" 
                                           Height="{StaticResource CardContentHeight}"
                                           Text="{TemplateBinding Content}"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>

                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="{StaticResource PresetHoverBorderBrush}"/>
                                <Setter TargetName="CardBorder" Property="BorderThickness" Value="{StaticResource CardSelectedBorderThickness}"/>
                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="CardBorder"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="{StaticResource CardBackgroundColorHover}"
                                                            Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>
                                <MultiTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="CardBorder"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="{StaticResource CardBackgroundColorNormal}"
                                                            Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.ExitActions>
                            </MultiTrigger>

                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="{StaticResource PresetSelectedBorderBrush}"/>
                                <Setter TargetName="CardBorder" Property="BorderThickness" Value="{StaticResource CardSelectedBorderThickness}"/>
                                <Setter TargetName="CardBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource CardBackgroundColorSelected}"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center">

            <TextBlock Width="{StaticResource ContainerWidth}" 
                       Text="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=WelcomePresetSettingTitle}" 
                       FontSize="16" 
                       Margin="0,5"
                       TextWrapping="Wrap"
                       Foreground="{StaticResource TextPrimaryBrush}"/>

            <Grid Width="{StaticResource ContainerWidth}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="{StaticResource CardSpacerWidth}" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <RadioButton Grid.Column="0" 
                              Style="{StaticResource PresetCardStyle}"
                              Content="preset1"
                              Tag="{StaticResource Preset1HeaderBrush}"
                              GroupName="PresetGroup"/>

                <RadioButton Grid.Column="2" 
                              Style="{StaticResource PresetCardStyle}"
                              Content="preset2"
                              Tag="{StaticResource Preset2HeaderBrush}"
                              GroupName="PresetGroup"/>

            </Grid>
        </StackPanel>
    </Grid>
</UserControl>