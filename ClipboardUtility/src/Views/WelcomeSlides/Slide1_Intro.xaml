<UserControl x:Class="ClipboardUtility.src.Views.WelcomeSlides.Slide1_Intro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:loc="clr-namespace:ClipboardUtility.src.Helpers"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="700">
    <StackPanel VerticalAlignment="Center" Margin="50,40">
        <TextBlock Text="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=AppTitle}" 
                   FontSize="28" 
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   Margin="0,10"
                   Style="{StaticResource TextBlockDefault}"/>

        <TextBlock Text="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=AppDescription}" 
                   FontSize="16" 
                   Margin="0,5"
                   TextWrapping="Wrap"
                   Foreground="{StaticResource TextPrimaryBrush}"
                   Style="{StaticResource TextBlockDefault}"/>

        <hc:Divider Margin="0,15,0,10" 
                    LineStroke="{StaticResource TextSecondaryBrush}"
                    LineStrokeThickness="1"/>

        <TextBlock Text="{Binding AppVersion, StringFormat='Version: {0}'}" 
                   FontSize="14" 
                   Margin="0,5,0,0"
                   Foreground="{StaticResource TextSecondaryBrush}"
                   Style="{StaticResource TextBlockDefault}"/>
    </StackPanel>
</UserControl>