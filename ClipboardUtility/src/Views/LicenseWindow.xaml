<Window x:Class="ClipboardUtility.src.Views.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardUtility.src.Views"
        xmlns:loc="clr-namespace:ClipboardUtility.src.Helpers"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="License" Height="450" Width="800">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=LicenseDescription}"
                   TextWrapping="Wrap"
                   FontWeight="Bold"
                   FontSize="13"
                   Margin="0,0,0,8" />

        <hc:Divider Grid.Row="1" Margin="0,0,0,8" />

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="4">
            <StackPanel x:Name="LicenseStackPanel" Orientation="Vertical" />
        </ScrollViewer>
    </Grid>
</Window>
