<Window x:Class="ClipboardUtility.src.Views.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardUtility.src.Views"
        xmlns:loc="clr-namespace:ClipboardUtility.src.Helpers"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="License" Height="500" Width="850">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{Binding Source={x:Static loc:LocalizedStrings.Instance}, Path=LicenseDescription}"
                   TextWrapping="Wrap"
                   FontWeight="Bold"
                   FontSize="13"
                   Margin="0,0,0,8" />

        <Separator Grid.Row="1" Margin="0,0,0,8" />

        <TabControl Grid.Row="2">
            <!-- NuGet Packages Tab -->
            <TabItem Header="NuGet Packages">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="このアプリケーションで使用されているNuGetパッケージのライセンス情報:" 
                               Margin="8,8,8,4"
                               TextWrapping="Wrap" />
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="4">
                        <StackPanel x:Name="PackageLicenseStackPanel" Orientation="Vertical" />
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <!-- Font Licenses Tab -->
            <TabItem Header="Font Licenses">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="このアプリケーションで使用されているフォントのライセンス情報:" 
                               Margin="8,8,8,4"
                               TextWrapping="Wrap" />
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="4">
                        <StackPanel x:Name="FontLicenseStackPanel" Orientation="Vertical" />
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
